<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    app:cardElevation="@dimen/dp3"
    android:translationZ="@dimen/dp3"
    app:cardCornerRadius="@dimen/dp5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp5"
        android:orientation="vertical">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_author"
                android:padding="@dimen/dp3"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/sp12"
                android:text="@string/app_name"/>

            <TextView
                android:id="@+id/tv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_red_corner"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp2"
                android:text="@string/str_top"
                android:textColor="@color/color_top"
                android:textSize="@dimen/sp10"
                android:layout_marginStart="@dimen/dp10"
                android:layout_toEndOf="@id/tv_author"/>

            <TextView
                android:id="@+id/tv_date"
                android:padding="@dimen/dp3"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/sp12"
                android:text="@string/app_name"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="@dimen/dp100"
                android:layout_height="match_parent"
                android:minHeight="@dimen/dp120"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:padding="@dimen/dp3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:textColor="@color/textColorPrimary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dp2"
                    android:textSize="@dimen/sp16"
                    android:text="@string/app_name"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:padding="@dimen/dp3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:minLines="0"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dp2"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/sp14"
                    android:text="@string/app_name"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp3"
            android:layout_marginBottom="@dimen/dp5">
            <TextView
                android:id="@+id/tv_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp2"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp12"
                android:text="@string/app_name"/>

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp5"
                android:src="@drawable/ic_like_normal"/>
        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>