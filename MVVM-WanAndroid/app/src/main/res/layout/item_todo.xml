<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_todo_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:translationZ="@dimen/dp3"
    app:cardCornerRadius="@dimen/dp5"
    app:cardElevation="@dimen/dp3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_todo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/dp3"
                android:text="@string/app_name"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_todo_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="0"
                android:padding="@dimen/dp3"
                android:text="@string/app_name"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_todo_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="0"
                android:padding="@dimen/dp3"
                android:text="@string/app_name"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_todo_complete_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="0"
                android:padding="@dimen/dp3"
                android:text="@string/app_name"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_finish_or_revert"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:padding="@dimen/dp12"
            android:src="@mipmap/ic_finish" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_marginEnd="@dimen/dp10"
            android:padding="@dimen/dp12"
            android:src="@mipmap/ic_delete" />
    </LinearLayout>

</androidx.cardview.widget.CardView>